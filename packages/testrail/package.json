{
  "name": "testrail",
  "version": "1.0.0",
  "description": "TestRail integration for test reporting",
  "main": "dist/index.js",
  "scripts": {
    "create-run": "ts-node -r dotenv/config src/create-run.ts",
    "report": "ts-node -r dotenv/config src/report-results.ts",
    "export": "ts-node -r dotenv/config src/export-cases.ts",
    "coverage": "ts-node -r dotenv/config src/check-case-coverage.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:force": "tsc -p tsconfig.build.json --skipLibCheck && tsc-alias -p tsconfig.build.json",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "dependencies": {
    "@dlenroc/testrail": "^1.9.1",
    "dotenv": "^16.5.0",
    "glob": "^10.3.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0"
  },
  "peerDependencies": {
    "test-framework": "workspace:*"
  }
}
